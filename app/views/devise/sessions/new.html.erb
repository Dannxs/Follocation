<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <%= image_tag "logo.png", class:"img-log-in mr-2" %>
    <h2 class="">Log in</h2>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <div class="row d-flex align-items-center">
        <%= f.input :remember_me, label: false, class: "checkbox inline", as: :boolean %>
        <span class="remember-text-login">Se souvenir de moi</span>
      </div>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>