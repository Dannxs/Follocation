<h1 class="text-center">Mes Locations</h1>
<br>
<h3 class="text-center"><%= @building.address %></h3>
<div class="row">
  <div class="col d-flex justify-content-center">
    <%= link_to 'Ajouter', "#{params[:id]}/rentals/new", class:"btn btn-primary btn-home-connexion" %>
  </div>
  <div class="col d-flex justify-content-center">
    <%= link_to "Retour", :back, class:"btn btn-primary btn-home-connexion text-center" %>
  </div>
</div>
<br>
<br>

<div class="row">
  <ul>
    <% @building.rentals.each do |f| %>
      <li>
        <%= link_to "#{f.type_of_home} de #{f.area} m² / #{f.nb_piece}  pièce(s) - #{f.price_rent} €", "/buildings/#{f.building_id}/rentals/#{f.id}" %>
      </li>
      <br>
    <% end %>
  </ul>
</div>
